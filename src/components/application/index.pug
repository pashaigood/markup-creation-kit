.application
    .application__bg--first
    .application__bg--second
    .application__header(role='header')
        img.application__header__indicators(src=require('./images/connections.svg'))
    .application__body(role='body')
        .application__body__tools
            img(src=require('./images/icon-menu.svg'))
        .application__body__heading.application__body__heading--1
            | Your books
        .application__body__months
            ul
                li.active(role='button') This month
                li(role='button') October
                li(role='button') September
                li(role='button') August
        .application__body__books
            include ../books/index.pug
    .application__footer(role='footer')
        include ../footer/index.pug
